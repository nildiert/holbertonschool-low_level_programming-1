# -*- MakeFile -*-

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

OBJ: $(SRC) m.h
	$(CC) -c $(SRC) m.h

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

re:
	$(RM) $(OBJ)
	$(CC) -c $(SRC) m.h
	$(CC) $(OBJ) -o $(NAME)
